
<div class="container">



    <div class="float-animation">
      <img src="assets/img/burger-logo.png" alt="burger-icon" width="300">
    </div>
    <h1 class="display-3">Eat-Da-Burger!</h1>
    <p class="info">Enter a burger you want to eat! Click the "Make it" button</p>





<div class="row">
<div class="col-lg-4">

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit" class="btn btn-danger">Devour it!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-lg-4">
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <textarea class="form-control" type="text" id="bu" name="burger_name" rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Make it!</button>

</form>
</div>

<div class="col-lg-4">
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <!--button type="submit">Yum!</button-->
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>

</div>
</div>
